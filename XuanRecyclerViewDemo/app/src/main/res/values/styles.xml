<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- design样式 -->
    <style name="Theme.Design.Xuan" parent="Base.Theme.Design.Xuan" />

    <style name="Base.Theme.Design.Xuan" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- menu -->
        <item name="android:textColor">@color/base_white</item>
        <item name="actionMenuTextColor">@color/base_white</item>
        <item name="android:actionMenuTextColor">@color/base_white</item>

        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_20</item>

        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <!-- menu -->

        <!--        &lt;!&ndash; 系统状态栏透明与app风格颜色一致 &ndash;&gt;
                <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
                &lt;!&ndash; 系统状态栏透明与app风格颜色一致 &ndash;&gt;
                <item name="android:windowTranslucentNavigation" tools:ignore="NewApi">false</item>-->
        <!-- 在系统状态栏下面 -->
        <!--        <item name="android:fitsSystemWindows">true</item>-->
        <!-- App bar 上的标题与更多菜单中的文字颜色。 -->
        <item name="android:textColorPrimary">@color/base_blue</item>
        <!-- Actionbar 的背景色设定在 style 中的 colorPrimary -->
        <item name="colorPrimary">@color/base_blue</item>
        <!-- 状态栏背景色 -->
        <item name="colorPrimaryDark">@color/base_blue</item>
        <!--<item name="navigationBarColor">@color/base_blue</item> 底部导航栏底色 -->
        <!-- 导航栏的背景色，但只能用在 API Level 21 (Android 5) 以上的版本 -->
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/base_blue</item>
        <!-- 各控制元件(如：check box、switch 或是 radoi) 被勾选 (checked) 或是选定 (selected) 的颜色 -->
        <item name="colorAccent">@color/base_blue</item>
        <!-- 各控制元件的预设颜色 -->
        <item name="colorControlNormal">@color/base_blue</item>
        <!-- App 的背景色 -->
        <item name="android:windowBackground">@color/base_white</item>


    </style>
    <!-- design样式 -->
    <!-- 黑色文本 -->
    <style name="base_textview">
        <item name="android:textColor">@color/base_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/size_16</item>
    </style>
    <!-- 黑色文本 -->
    <!-- SmartTabLayout -->
    <style name="base_smartTabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_48</item>
        <item name="stl_customTabTextLayoutId">@layout/item_tab_layout_text</item>
        <item name="stl_customTabTextViewId">@+id/tv_tab_layout</item>
        <item name="stl_indicatorColor">@color/base_blue</item>
        <item name="stl_indicatorInterpolation">smart</item>
        <item name="stl_indicatorThickness">@dimen/dimen_3</item>
        <item name="stl_underlineThickness">@dimen/dimen_1</item>
        <item name="stl_dividerThickness">0dp</item>
        <item name="stl_distributeEvenly">true</item>
    </style>
    <!-- SmartTabLayout -->
</resources>